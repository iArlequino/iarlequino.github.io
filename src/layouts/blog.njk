    <title>Mykola Chornyi - Blog, News</title>
  </head>
  <body class="body">
    <div class="wrap">
      {% include "header.njk" %}
      <main class="main-content">
        <section class="blog section">
          <div class="blog__container container">
            <h1 class="blog__heading text-reset">Frontend Developer Blog</h1>
            <h2 class="visually-hidden">List of articles</h2>
            <ul class="blog__list list-reset">
              {% for post in collections.blog | reverse %}
                <li class="blog__item blog-post">
                  <article class="blog-post__article">
                    <div class="blog-post__image">
                      <img src="{{ post.data.img }}" alt="Обложка статьи" class="blog-post__img" loading="lazy">
                    </div>
                    <div class="blog-post__info">
                      <div class="blog-post__time-info">
                        <svg class="blog-post__time-svg">
                          <use xlink:href="../assets/img/sprite.svg#clock"></use>
                        </svg>
                        <time class="blog-post__time text-reset" datetime="{{ post.data.datetime }}">
                          {{ post.data.time }}
                        </time>
                      </div>
                      <h3 class="blog-post__title text-reset">
                        {{ post.data.title }}
                      </h3>
                    </div>
                    <span class="blog-post__tag">{{ post.data.tag }}</span>
                    <a href="{{ post.data.link }}" class="blog-post__link link-reset" aria-label="Read more"></a>
                  </article>
                </li>
              {% endfor %}
            </ul>
          </div>
        </section>
      </main>
      {% include "footer.njk" %}
    </div>
    <script src="../assets/js/main.js"></script>
  </body>
</html>